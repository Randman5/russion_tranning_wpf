<Window x:Class="Training_Rus_WPF.FormInputed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Training_Rus_WPF"
        mc:Ignorable="d"
        Title="FormInputed" Height="30.0" Width="210.0" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <TextBox Margin="0,0,60,0" FontSize="20" x:Name="textbox" KeyDown="TextBox_KeyDown"/>
        <StackPanel Orientation="Horizontal" Background="Aqua" Width="60" HorizontalAlignment="Right">
            <Button x:Name="ok" Width="30" Height="30"  Click="Button_Click_1" >
                <Image Source="checkmark.png"/>
            </Button>
            <Button x:Name="cancel" Width="30" Height="30"  VerticalAlignment="Top" Click="Button_Click" >
                <Image Source="cross.png" />
            </Button>
        </StackPanel>
    </Grid>
</Window>
